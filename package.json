{
  "name": "llamasabia",
  "version": "1.0.0",
  "description": "IA offline portable para educaci√≥n sin internet",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --dir"
  },
  "keywords": ["ai", "offline", "education", "llama", "portable"],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.llamasabia.app",
    "productName": "LlamaSabIA",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "app/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "dir",
      "icon": "assets/icon.ico"
    },
    "extraResources": [
      {
        "from": "engine/",
        "to": "engine/",
        "filter": ["**/*"]
      },
      {
        "from": "models/",
        "to": "models/",
        "filter": ["**/*.gguf", "**/*.model"]
      }
    ],
    "compression": "maximum",
    "asar": true
  }
}